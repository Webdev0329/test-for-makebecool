body {
	margin: 0;
    font-family: 'Mulish', sans-serif;
}

.hide {
	display: none !important;
}

@media screen and (max-width: 767px) {
	.desktop {
		display: none !important;
	}
}

@media screen and (min-width: 768px) {
	.mobile {
		display: none !important;
	}
}

.header {
	display: flex;
	align-items: center;
	padding: 20px 0;
}

.page-width {
	width: 90%;
	max-width: 1200px;
	margin: 0 auto;
}

.header-right {
    width: 100%;
    padding-left: 50px;
    text-align: right;
}

.main_nav {
    display: flex;
    align-items: center;
    place-content: flex-end;
}

.main_nav .nav-item {
	font-size: 21px;
	font-weight: 700;
	margin: 0 15px;
	position: relative;
	cursor: pointer;
	text-decoration: none;
	color: #000;
}

.main_nav .nav-item:hover {
	color: #ef5353;
}

.main_nav .nav-item.item-search {
	margin-left: 30px;
}

.strong {
	color: rgba(204, 0, 0, 1) !important;
	text-transform: uppercase;
}

.grey {
	color: #8c8c8c;
}

.cart-count {
    background: #CC0000;
    position: absolute;
    color: #FFF;
    font-size: 10px;
    width: 16px;
    height: 16px;
    line-height: 17px;
    text-align: center;
    border-radius: 50%;
    top: -5px;
    right: -8px;
}

.logo {
	max-width: 30vw;
}

.mobile-nav {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: -100vw;
    z-index: 1000;
    background: #131824;
    color: #FFF;
    padding: 20px;
    box-sizing: border-box;
    font-size: 21px;
    transition: ease .5s;
}

.mobile-nav.opened {
    transform: translateX(100vw);
}

.mobile-nav .nav-item {
    display: inline-block;
    width: 100%;
    padding: 15px 0;
    border-bottom: solid 1px rgba(255, 255, 255, 0.2);
    font-weight: 700;
}

.mobile-nav form.search {
	position: relative;
}

.mobile-nav form.search input[type='text'] {
	background: transparent;
    border: none;
    font-size: 16px;
    color: #FFF;
    width: 100%;
}

.mobile-nav form.search button[type='submit'] {
    float: right;
    background: transparent;
    border: none;
    position: absolute;
    right: 0;
    top: 0;
}

.mobile-nav form.search input[type='submit']:before {
	content: "";
}

.disabled {
	opacity: .6;
}

.uppercase {
	text-transform: uppercase;
}

.ajaxCart {
    position: fixed;
    width: 100vw;
    height: 100vh;
    top: 0;
    right: -375px;
    background: #FFF;
    z-index: 1000;
    max-width: 375px;
    transition: ease .5s;
}

.ajaxCart.opened {
    transform: translateX(-375px);
}

.ajaxcart-header {
    background: #3333331f;
    padding: 15px 20px;
}

.btn-close {
	cursor: pointer;
}

.ajaxcart-header .btn-close {
    position: absolute;
    right: 15px;
    top: 12px;
}

.ajaxCart .item-row {
	padding: 15px;
	display: flex;
	border-bottom: solid 1px #4a4a4a0f;
}

.ajaxCart .item-row .item-image {
    width: 64px;
    height: 64px;
    position: relative;
    border-radius: 50%;
    overflow: hidden;
}

.ajaxCart .item-row .item-image img {
	object-fit: cover;
    width: 100%;
    height: 100%;
    object-position: center center;
}

.ajaxCart .item-row .item-content {
    width: calc(100% - 84px);
    margin-left: 20px;
}

.ajaxCart .item-row .item-title {
	font-size: 16px;
	font-weight: 700;
}

.ajaxCart .item-row .item-price {
	display: inline-block;
	width: 100%;
	margin-top: 10px;
	font-weight: 700;
}

.ajaxCart .item-quantity-row {
	display: inline-flex;
    margin-top: 15px;
    height: 32px;
}

.ajax-qty-adjust {
	width: 32px;
    background: #fff;
    border: 1px solid #d8d8d8;
    box-sizing: border-box;
    border-radius: 4px 0 0 4px;
    font-size: 20px;
    cursor: pointer;
    box-shadow: inset 0 -2px 2px #00000024;
}

.ajax-qty-num {
    background: #fff;
    border: 1px solid #d8d8d8;
    box-sizing: border-box;
    width: 60px;
    font-size: 14px;
    text-align: center;
    box-shadow: inset 0 2px 2px #00000024;
}

.ajax-qty-num::-webkit-outer-spin-button,
.ajax-qty-num::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

.ajaxcart-overlay {
    width: 100vw;
    height: 100vh;
    left: 0;
    top: 0;
    position: fixed;
    z-index: 999;
    background: #131824;
    opacity: .8;
}

.ajaxcart-footer {
	padding: 10px 15px;
    position: absolute;
    bottom: 0;
    background: #4a4a4a0f;
    width: 100%;
    box-sizing: border-box;
}

.ajaxcart-footer > div {
    display: inline-flex;
    justify-content: space-between;
    margin: 5px 0;
    width: 100%;
}

.ajaxCart .btn-cart {
    padding: 15px 20px;
    display: inline-block;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 700;
    color: #202020;
    background: #fff;
    border: 1px solid #202020;
    width: 120px;
    box-sizing: border-box;
    text-align: center;
}

.ajaxCart .btn-checkout {
    background: #c00;
    border: 1px solid #950000;
    box-sizing: border-box;
    box-shadow: inset 0 -2px 2px #4a4a4a52;
    border-radius: 4px;
    text-decoration: none;
    color: #fff;
    padding: 15px 20px;
    width: calc(100% - 140px);
    text-align: center;
}

@media screen and (max-width: 1200px) {
	.main_nav .nav-item {
		font-size: 16px;
	}
}

@media screen and (max-width: 991px) {
	.main_nav .nav-item {
		margin: 0 8px;
	}

	.main_nav .nav-item.item-search {
		margin-left: 15px;
	}
}

@media screen and (max-width: 767px) {
	.header-left {
		position: relative;
		width: 100%;
		display: flex;
	    justify-content: space-between;
	    align-items: center;
	}

	.logo {
		width: 200px;
		max-width: unset;
	}
}