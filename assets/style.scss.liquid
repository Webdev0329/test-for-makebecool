body {
	margin: 0;
    font-family: 'Mulish', sans-serif;
}

.hide {
	display: none !important;
}

@media screen and (max-width: 767px) {
	.desktop {
		display: none !important;
	}
}

@media screen and (min-width: 768px) {
	.mobile {
		display: none !important;
	}
}

.header {
	display: flex;
	align-items: center;
	padding: 20px 0;
}

.page-width {
	width: 90%;
	max-width: 1200px;
	margin: 0 auto;
}

.header-right {
    width: 100%;
    padding-left: 50px;
    text-align: right;
}

.main_nav {
    display: flex;
    align-items: center;
    place-content: flex-end;
}

.main_nav .nav-item {
	font-size: 21px;
	font-weight: 700;
	margin: 0 15px;
	position: relative;
	cursor: pointer;
	text-decoration: none;
	color: #000;
}

.main_nav .nav-item:hover {
	color: #ef5353;
}

.main_nav .nav-item.item-search {
	margin-left: 30px;
}

.strong {
	color: rgba(204, 0, 0, 1) !important;
	text-transform: uppercase;
}

.grey {
	color: #8c8c8c;
}

.main_nav .cart-count {
    background: #CC0000;
    position: absolute;
    color: #FFF;
    font-size: 10px;
    width: 16px;
    height: 16px;
    line-height: 17px;
    text-align: center;
    border-radius: 50%;
    top: -5px;
    right: -8px;
}

.logo {
	max-width: 30vw;
}

.mobile-nav {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #131824;
    color: #FFF;
    padding: 20px;
    box-sizing: border-box;
    font-size: 21px;
    transform: translateX(-100vw);
    transition: ease .5s;
}

.mobile-nav.opened {
	transform: translateX(0);
}

.mobile-nav .nav-item {
    display: inline-block;
    width: 100%;
    padding: 15px 0;
    border-bottom: solid 1px rgba(255, 255, 255, 0.2);
    font-weight: 700;
}

.mobile-nav form.search {
	position: relative;
}

.mobile-nav form.search input[type='text'] {
	background: transparent;
    border: none;
    font-size: 16px;
    color: #FFF;
    width: 100%;
}

.mobile-nav form.search button[type='submit'] {
    float: right;
    background: transparent;
    border: none;
    position: absolute;
    right: 0;
    top: 0;
}

.mobile-nav form.search input[type='submit']:before {
	content: "";
}

.disabled {
	opacity: .6;
}

@media screen and (max-width: 1200px) {
	.main_nav .nav-item {
		font-size: 16px;
	}
}

@media screen and (max-width: 991px) {
	.main_nav .nav-item {
		margin: 0 8px;
	}

	.main_nav .nav-item.item-search {
		margin-left: 15px;
	}
}

@media screen and (max-width: 767px) {
	.header-left {
		position: relative;
		width: 100%;
		display: flex;
	    justify-content: space-between;
	    align-items: center;
	}

	.logo {
		width: 200px;
		max-width: unset;
	}
}