.product {
	display: flex;
	padding-top: 30px;
    border-top: solid 1px rgba(32, 32, 32, 0.05);
}

.product .left {
	width: 55%;
}

.product .right {
	width: 45%;
	padding-left: 20px;
}

.product .product-images .frame img {
	width: 100%;
}

.product_title {
	font-family: 'Goudy Bookletter 1911';
    margin-top: 0;
    font-weight: 300;
}

.product .row {
	margin-top: 30px;
}

.product .selector-row label {
	font-weight: 700;
    font-size: 21px;
    display: block;
    margin-bottom: 10px;
}

.product .selector-wrapper {
    border: solid 1px rgba(216, 216, 216, 1);
    border-radius: 4px;
    max-width: 300px;
    position: relative;
    cursor: pointer;
}

.product .selector-wrapper select {
	font-size: 14px;
    padding: 10px;
    border: none;
    width: 100%;
    height: 100%;
    -webkit-appearance: none;
    cursor: pointer;
}

.product .selector-wrapper:after {
	content: "";
    display: inline-block;
    position: absolute;
    width: 8px;
    height: 8px;
    border-bottom: solid 1px;
    border-left: solid 1px;
    transform: rotate(-45deg);
    right: 15px;
    top: 11px;
    z-index: 0;
}

.product .product-price {
    color: rgba(204, 0, 0, 1);
    font-size: 36px;
    font-weight: 700;
    line-height: 1;
}

.product .product-price sup {
	color: rgba(35, 34, 49, 1);
    font-weight: 300;
    font-size: 13px;
}

.product .quantity-selector {
	display: inline-flex;
}

.qty-adjust_minus {
    background: #FFFFFF;
    border: 1px solid #D8D8D8;
    box-sizing: border-box;
    border-radius: 4px 0px 0px 4px;
    padding: 10px 16px;
    font-size: 20px;
    cursor: pointer;
    box-shadow: inset 0 -2px 2px #00000024;
}

.qty-adjust_plus {
    background: #FFFFFF;
    border: 1px solid #D8D8D8;
    box-sizing: border-box;
    border-radius: 0px 4px 4px 0px;
    padding: 10px 16px;
    font-size: 20px;
    cursor: pointer;
    box-shadow: inset 0 -2px 2px #00000024;
}

.qty-num {
    background: #FFFFFF;
    border: 1px solid #D8D8D8;
    box-sizing: border-box;
    width: 60px;
    font-size: 20px;
    text-align: center;
    box-shadow: inset 0 2px 2px #00000024;
}

.qty-num::-webkit-outer-spin-button,
.qty-num::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

.add-to-cart-row {
	display: flex;
}

button.add-to-cart {
    margin-left: 15px;
    width: 100%;
    max-width: 300px;
    background: #CC0000;
    border: 1px solid #950000;
    box-sizing: border-box;
    border-radius: 4px;
    color: #FFF;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: inset 0px -2px 2px #38383859;
}

.product-images .gallery {
	margin-top: 10px;
}

.product-images .gallery .gallery-item.selected {
	opacity: 1;
}

.product-images .gallery .gallery-item {
	width: 50px;
    height: 50px;
    display: inline-block;
    cursor: pointer;
    opacity: .6;
}

.product-images .gallery .gallery-item img {
    object-fit: cover;
    width: 100%;
    height: 100%;
}

@media screen and (max-width: 767px) {
	.product {
		display: block;
	}

	.product .left {
	    width: 100vw;
    	margin-left: calc(50% - 50vw);
	}

	.product .right {
		width: 100%;
		padding: 0;
		margin-top: 20px;
	}

	.product-images .gallery {
		text-align: center;
		position: relative;
	}

	.gallery_btn-prev {
		position: absolute;
	    left: 0;
	    top: 0;
	    height: 100%;
	    display: flex;
	    flex-direction: column;
	    justify-content: center;
	    width: 30px;
	    font-weight: 600;
	}

	.gallery_btn-next {
		position: absolute;
	    right: 0;
	    top: 0;
	    height: 100%;
	    display: flex;
	    flex-direction: column;
	    justify-content: center;
	    width: 30px;
	    font-weight: 600;
	}

	.product_title {
		text-align: center;
	}

	.shopify-product-form {
		padding: 10px 0;
		position: relative;
	}

	.shopify-product-form:before {
    	content: "";
		background: #29292912;
		position: absolute;
		left: calc(50% - 50vw);
		top: 0;
		right: calc(50% - 50vw);
		bottom: 0;
		z-index: -1;
	}

	.product .product-price {
		font-size: 24px;
	}
}