{% unless product.has_only_default_variant %}
  {% for option in product.options_with_values %}
    <div class="selector-row">
      <label>Choose your variant</label>
      <div class="selector-wrapper">
        <select name="id" id="productSelect-{{ section.id }}" class="product-variants">
          {% for variant in product.variants %}
            {% if variant.available %}
              <option value="{{variant.id}}" data-sku="{{ variant.sku }}" data-image="{{variant.featured_image.id}}" data-sale_price="{{variant.price}}" {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %}>
                {{ variant.title }}
              </option>
            {% else %}
              <option disabled="disabled">
                {{ variant.title }} - {{ 'products.product.sold_out_html' | t | strip_html }}
              </option>
            {% endif %}
          {% endfor %}
        </select>
      </div>
    </div>
  {% endfor %}
{% endunless %}