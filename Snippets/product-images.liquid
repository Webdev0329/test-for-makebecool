{% assign current_variant = product.selected_or_first_available_variant %}

<div class="product-images">
  <div class="frame">
        {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
        {% assign alt = featured_image.alt | escape %}

        <img src="{{featured_image | img_url: 'master'}}" alt="{{alt}}"> 
  </div>
  {% if product.images.size > 1 %}
    <div class="gallery">
      {% for image in product.images %}
        <a data-src="{{ image | img_url: 'master' }}" data-image="{{image.id}}" class="gallery-item {% if image.id == featured_image.id %}selected{% endif %}">
          <img class="box" src="{{ image | img_url: '100x100' }}">
        </a>
      {% endfor %} 
      <a class="gallery_btn-prev disabled mobile"><</a>   
      <a class="gallery_btn-next mobile">></a>   
    </div>
  {% endif %}
</div>